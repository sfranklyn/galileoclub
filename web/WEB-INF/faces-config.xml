<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="1.2"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
    <application>
        <locale-config>
            <default-locale>in_ID</default-locale>
        </locale-config>
        <resource-bundle>
            <base-name>messages</base-name>
            <var>msgs</var>
        </resource-bundle>
        <view-handler>
            com.sun.facelets.FaceletViewHandler
        </view-handler>
        <navigation-handler>
            org.primefaces.optimus.navigationhandler.ViewIdBasedNavigationHandler
        </navigation-handler>
    </application>
    <managed-bean>
        <managed-bean-name>logOut</managed-bean-name>
        <managed-bean-class>galileoclub.jsf.beans.LogOutBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>app</managed-bean-name>
        <managed-bean-class>galileoclub.jsf.beans.AppBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>visit</managed-bean-name>
        <managed-bean-class>galileoclub.jsf.beans.VisitBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>logIn</managed-bean-name>
        <managed-bean-class>galileoclub.jsf.beans.LogInBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>visit</property-name>
            <value>#{visit}</value>
        </managed-property>
        <managed-property>
            <property-name>messageSource</property-name>
            <value>#{msgs}</value>
        </managed-property>
        <managed-property>
            <property-name>app</property-name>
            <value>#{app}</value>
        </managed-property>
    </managed-bean>
</faces-config>
